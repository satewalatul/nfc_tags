<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="nfc_tags.list">
      <field name="name">nfc_tags list</field>
      <field name="model">nfc_tags</field>
      <field name="arch" type="xml">
        <tree>
          <field name="tag_id"/>
          <field name="is_linked" readonly="1"/>
        </tree>
      </field>
    </record>

    <record id="nfc_tags.nfc_tags_form" model="ir.ui.view">
            <field name="name">nfc.tags.nfc_tags</field>
            <field name="model">nfc_tags</field>
            <field name="arch" type="xml">
                <form class="nfc_tags_form">
                    <sheet>
                        <group>
                            <group>
                                <field name="tag_id" required="1"/>
                                <field name="permit_id" required="1"/>
                                <field name="next_inspection_date" required="1"/>
                                <field name="length" required="1"/>
                                <field name="breadth" required="1"/>
                                <field name="height" required="1"/>
                                <field name="safe_working_load" required="1"/>
                            </group>
                            <group>
                                <field name="is_linked" readonly="1"/>
                                 <field name="erected_by" required="1"/>
                                <field name="erected_by_company" required="1"/>
                                <field name="latitude" required="1"/>
                                <field name="longitude" required="1"/>
                                <field name="details" required="1"/>
                            </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="nfc_tags.action_window">
      <field name="name">NFC Tags</field>
      <field name="res_model">nfc_tags</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="nfc_tags.action_server">
      <field name="name">nfc_tags server</field>
      <field name="model_id" ref="model_nfc_tags"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


